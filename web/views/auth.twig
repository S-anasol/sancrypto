{% extends "layout.twig" %}

{% block title %}Sign In -{{ parent() }}{% endblock %}
{% block page_title %}Sign In{% endblock %}

{% block content %}

{% for error in errors %}
<div class="alert alert-danger">{{error}}</div>
{% endfor %}

{% if global._GET.msg == 'register_success' %}
<div class="alert alert-success">{% trans %}Register Success! Check your e-mail{% endtrans %}</div>
{% endif %}
<form class="no-margin" action="{{global.base}}/index/auth/" method="POST" />
<fieldset>
	<div class="form-group no-margin">
		<label for="email">Email</label>
		<div class="input-group input-group-lg">
			<div class="input-group-addon">
				<span class="add-on"> <i class="fa fa-user icon-large"></i> </span>
			</div>
			<input id="email" type="email" name="email" class="form-control input-lg" placeholder="Your Email" data-trigger="change" data-validation-minlength="1" required="required"/>
		</div>
	</div>
	<div class="form-group">
		<label class="control-label" for="password">Password</label>
		<div class="input-group input-group-lg">
			<div class="input-group-addon">
				<span class="add-on"> <i class="fa fa-lock"></i> </span>
			</div>
			<input id="password" type="password" name="password" class="form-control input-lg" placeholder="Your Password" data-trigger="change" data-minlength="6" required="required"/>
		</div>
	</div>
</fieldset>
<div class="form-actions">
	<button type="submit" class="btn btn-block btn-lg btn-danger">
		<small>Sign In</small>
	</button>
</div>
</form>
{% endblock %}