{% extends "layout.twig" %}

{% block title %}{{subtitle}}{{ parent() }}{% endblock %}

{% block content %}
<div class="col-md-6 col-md-offset-3">
	<section class="widget">
		<header>
			<h4>
				<i class="fa fa-align-left"></i>
				Adding Post
			</h4>
		</header>
		<div class="body">
			<form class="form-horizontal label-right" method="post"/>
			<fieldset>
				<div class="control-group">
					<label class="control-label" for="name">
						Name
					</label>
					<div class="controls form-group">
						<div class="">
							<input type="text" id="name" name="name" class="form-control" value="{{ data.name }}" required="required" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="wysiwyg">
							content
						</label>
						<div class="controls form-group">
							<textarea rows="4" class="form-control" name="content" id="wysiwyg">{{ data.content }}</textarea>
						</div>
					</div>
					
				</div>
			</fieldset>
			<div class="form-actions">
				<button type="submit" class="btn btn-danger">Add</button>
				<a href="{{ global.base }}/posts/" class="btn">Cancel</a>
			</div>
		</form>
		
	</div>
</section>
</div>

{% endblock %}

{% block javascript %}
<script src="/js/wysihtml5-0.3.0_rc2.js"></script>
<script src="/js/bootstrap-wysihtml5.js"></script>
